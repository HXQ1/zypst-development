					set {%arg 1%.punish.chatlevel.1.command} to ""
				if {%arg 1%.punish.chatlevel.1.pastoffences} = 5:
					set {%arg 1%.punish.chatlevel.1.message} to "4 Days."
					set {%arg 1%.punish.chatlevel.1.command} to ""
				if {%arg 1%.punish.chatlevel.1.pastoffences} = 6:
					set {%arg 1%.punish.chatlevel.1.message} to "8 Days."
					set {%arg 1%.punish.chatlevel.1.command} to ""
				if {%arg 1%.punish.chatlevel.1.pastoffences} = 7:
					set {%arg 1%.punish.chatlevel.1.message} to "15 Days."
					set {%arg 1%.punish.chatlevel.1.command} to ""
				if {%arg 1%.punish.chatlevel.1.pastoffences} = 8:
					set {%arg 1%.punish.chatlevel.1.message} to "30 Days."
					set {%arg 1%.punish.chatlevel.1.command} to ""
				if {%arg 1%.punish.chatlevel.1.pastoffences} = 9:
					set {%arg 1%.punish.chatlevel.1.message} to "Permanent."
					set {%arg 1%.punish.chatlevel.1.command} to ""
#Setting variables for level 2 chat offenses depending on amount of times repeated. (Total chances = 6)
				if {%arg 1%.punish.chatlevel.2.pastoffences} = 1:
					set {%arg 1%.punish.chatlevel.2.message} to "2 Days."
