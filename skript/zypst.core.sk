command /punish [<offline player>]:
	aliases: /p,
	permission: zypst.apprentice
	permission message: {@prefix} &7This command/action requires you to have the rank "&2Apprentice&7".
  trigger:
    if arg-2 is not set:
			message "{@prefix} Correct usage: /p <player>."
		else:
      if {%arg 1%.punish.clean} is true:
#Sets punishing variables for a player who has never been punished, lowest punishment for each level. Clean is set to false when a player is punished bellow in the code.
      	set {%arg 1%.punish.chatlevel.1.message} to "Warn player! This is the first level 1 chat offense!"
      	set {%arg 1%.punish.chatlevel.1.command} to ""
      	set {%arg 1%.punish.chatlevel.1.pastoffences} to 0
#Warning saying players has to be warned first (First level 1 chat offense).
				set {%arg 1%.punish.chatlevel.2.message} to "1 Hour."
      	set {%arg 1%.punish.chatlevel.2.command} to ""
      	set {%arg 1%.punish.chatlevel.2.pastoffences} to 0
#Lowest punishment for chat level 2 as this is first offense.
				set {%arg 1%.punish.chatlevel.3.message} to "30 Days."
      	set {%arg 1%.punish.chatlevel.3.command} to ""
      	set {%arg 1%.punish.chatlevel.3.pastoffences} to 0
#Lowest punishment for chat level 3 as this is first offense.
				set {%arg 1%.punish.clientlevel.1.message} to "Warn player! This is the first level 1 chat offense!"
      	set {%arg 1%.punish.clientlevel.1.command} to ""
      	set {%arg 1%.punish.clientlevel.1.pastoffences} to 0
#Warning saying players has to be warned first (First level 1 client offense).
				set {%arg 1%.punish.clientlevel.2.message} to ""
				set {%arg 1%.punish.clientlevel.2.command} to ""
				set {%arg 1%.punish.clientlevel.2.pastoffences} to 0
#Lowest punishment for client level 2 as this is first offense.
				set {%arg 1%.punish.clientlevel.3.message} to ""
				set {%arg 1%.punish.clientlevel.3.command} to ""
				set {%arg 1%.punish.clientlevel.3.pastoffences} to 0
#Lowest punishment for client level 3 as this is first offense.
			else:
#Setting variables for level 1 chat offenses depending on amount of times repeated. (Total chances = 10)
				if {%arg 1%.punish.chatlevel.1.pastoffences} = 1:
					set {%arg 1%.punish.chatlevel.1.message} to "2 Hours."
					set {%arg 1%.punish.chatlevel.1.command} to ""
